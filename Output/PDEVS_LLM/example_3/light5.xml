<?xml version="1.0" ?>
<statechart:Model xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:statechart="http://statechart/1.0" xmi:version="2.0">
  <initialState Name="start" Description="" outgoing="//@transitions.0"/>
  <states xsi:type="statechart:State" Name="off">
    <outputFunctions OutputPort="light_status_out">
      <Message>off</Message>
      <Action>Send current state</Action>
    </outputFunctions>
  </states>
  <states xsi:type="statechart:State" Name="on">
    <outputFunctions OutputPort="light_status_out">
      <Message>on</Message>
      <Action>Send current state</Action>
    </outputFunctions>
  </states>
  <transitions xsi:type="statechart:Transition" source="//@initialState" target="//@states.0"/>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Infinity" TimeAdvanceValue="0.0" source="//@states.1" target="//@states.0">
    <Action>Toggle state</Action>
    <Guard/>
  </transitions>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Infinity" TimeAdvanceValue="0.0" source="//@states.0" target="//@states.1">
    <Action>Toggle state</Action>
    <Guard/>
  </transitions>
  <transitions xsi:type="statechart:ExternalTransition" TimeAdvanceType="Infinity" TimeAdvanceValue="0.0" source="//@states.0" target="//@states.1" InputPort="signal_in">
    <Action>Change state based on signal</Action>
    <Guard/>
    <Message>toggle</Message>
  </transitions>
  <transitions xsi:type="statechart:ExternalTransition" TimeAdvanceType="Infinity" TimeAdvanceValue="0.0" source="//@states.1" target="//@states.0" InputPort="signal_in">
    <Action>Change state based on signal</Action>
    <Guard/>
    <Message>toggle</Message>
  </transitions>
</statechart:Model>
