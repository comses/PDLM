<?xml version="1.0" ?>
<statechart:Model xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:statechart="http://statechart/1.0" xmi:version="2.0">
  <initialState Name="start" Description="" outgoing="//@transitions.0"/>
  <states xsi:type="statechart:State" Name="idle"/>
  <states xsi:type="statechart:State" Name="busy"/>
  <transitions xsi:type="statechart:Transition" source="//@initialState" target="//@states.0">
    <Action>job_queue.init()</Action>
    <Action>time_advance=2</Action>
  </transitions>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="2.0" source="//@states.1" target="//@states.1">
    <Action>if job_queue.empty() then state=idle else job_queue.process()</Action>
    <Action>time_advance=2</Action>
    <Guard>job_queue.length()&gt;0</Guard>
  </transitions>
  <transitions xsi:type="statechart:ExternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="2.0" source="//@states.0" target="//@states.1" InputPort="in_1">
    <Action>job_queue.add(job)</Action>
    <Action> if state=idle then state=busy</Action>
    <Action>time_advance=2</Action>
    <Guard/>
    <Message>job</Message>
  </transitions>
  <transitions xsi:type="statechart:ExternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="2.0" source="//@states.0" target="//@states.1" InputPort="in_2">
    <Action>job_queue.add(job)</Action>
    <Action> if state=idle then state=busy</Action>
    <Action>time_advance=2</Action>
    <Guard/>
    <Message>job</Message>
  </transitions>
</statechart:Model>
