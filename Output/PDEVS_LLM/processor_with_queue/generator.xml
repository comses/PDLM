<?xml version="1.0" ?>
<statechart:Model xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:statechart="http://statechart/1.0" xmi:version="2.0">
  <initialState Name="start" Description="" outgoing="//@transitions.0"/>
  <states xsi:type="statechart:State" Name="job_count_0"/>
  <states xsi:type="statechart:State" Name="job_count_1">
    <outputFunctions OutputPort="job_out">
      <Message>job signal</Message>
      <Action>Send job signal</Action>
    </outputFunctions>
  </states>
  <states xsi:type="statechart:State" Name="job_count_2">
    <outputFunctions OutputPort="job_out">
      <Message>job signal</Message>
      <Action>Send job signal</Action>
    </outputFunctions>
  </states>
  <states xsi:type="statechart:State" Name="job_count_3">
    <outputFunctions OutputPort="job_out">
      <Message>job signal</Message>
      <Action>Send job signal</Action>
    </outputFunctions>
  </states>
  <finalState Name="stop"/>
  <transitions xsi:type="statechart:Transition" source="//@initialState" target="//@states.0"/>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="11.0" source="//@states.0" target="//@states.1">
    <Action>Increment job_count</Action>
    <Guard/>
  </transitions>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="12.0" source="//@states.1" target="//@states.2">
    <Action>Increment job_count</Action>
    <Guard/>
  </transitions>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Value" TimeAdvanceValue="13.0" source="//@states.2" target="//@states.3">
    <Action>Increment job_count</Action>
    <Guard/>
  </transitions>
  <transitions xsi:type="statechart:InternalTransition" TimeAdvanceType="Infinity" TimeAdvanceValue="0.0" source="//@states.3" target="//@states.4">
    <Action>Set time_advance to infinity</Action>
    <Guard>job_count = 3</Guard>
  </transitions>
</statechart:Model>
